# Cloudflare DNS Configurator Plugin Configuration
# Copy this file to .env and fill in your actual values

# Your Cloudflare API token (required)
# Generate at: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_api_token_here

# Your Cloudflare zone ID (required)
# Find in your domain's DNS settings page
CLOUDFLARE_ZONE_ID=your_zone_id_here

# Domain suffix to append to server names (optional)
# Example: if set to '.example.com', server 'minecraft' becomes 'minecraft.example.com'
CLOUDFLARE_DOMAIN_SUFFIX=.yourdomain.com

# Whether to proxy DNS records by default (optional)
# This enables Cloudflare's proxy features (DDoS protection, etc.)
CLOUDFLARE_DEFAULT_PROXIED=true

# Default TTL for DNS records in seconds (optional)
# Set to 1 for auto TTL (recommended for proxied records)
CLOUDFLARE_DEFAULT_TTL=1

# Enable debug logging (optional)
# Set to true for more detailed logging
CLOUDFLARE_DEBUG=false

# Server Type Filtering (optional)
# Only process servers that match these criteria
# Set to false to process all servers regardless of type
CLOUDFLARE_SERVER_TYPE_FILTERING=true

# Minecraft-related egg names (comma-separated, case-insensitive partial matches)
# Examples: minecraft, minecraft java, minecraft forge, minecraft fabric
CLOUDFLARE_EGG_NAMES=minecraft,minecraft java,minecraft bedrock,minecraft forge,minecraft fabric,minecraft paper,minecraft spigot,minecraft bukkit,minecraft vanilla,minecraft modded

# Minecraft-related nest names (comma-separated, case-insensitive partial matches)
# Examples: minecraft, game servers, gaming, games
CLOUDFLARE_NEST_NAMES=minecraft,game servers,gaming,games
